def credential = 'grup3'
def server = 'grup3@116.193.190.138'
def directory = 'housy-backend'
def url = 'https://github.com/Indizzy/housy-backend.git'
def branch = 'main'
def images = 'indizzy/housy-backend:v1'

pipeline{
  agent any
  stages{
     stage('Pull From Backend Repo') {
         steps {
            sshagent([credential]) {
                sh """ssh -o StrictHostkeyChecking=no ${server} << EOF
                cd ${directory}
                git remote add origin ${url} || git remote set-url origin ${url}
                git pull ${url} ${branch}
                exit
                EOF"""
              }
          }
      }
      stage ('building docker images'){
          steps{
              sshagent ([credential]) {
                  sh """ssh -o StrictHostkeyChecking=no ${server} << EOF
                  cd ${directory}
                  docker build -t ${images} .
                  exit
                  EOF"""
              }
          }       
      }
      stage ('docker up'){
          steps{
              sshagent ([credential]) {
                  sh """ssh -o StrictHostkeyChecking=no ${server} << EOF
                  cd ${directory}
                  docker-compose up -d
                  exit
                  EOF"""
              }
          }
      }
  }

}
